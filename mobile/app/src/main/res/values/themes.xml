<resources xmlns:tools="http://schemas.android.com/tools">    <!-- Chess Theme Application Theme -->
    <style name="Theme.OnlineChessAI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/chess_brown_primary</item>
        <item name="colorPrimaryVariant">@color/chess_brown_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/chess_gold</item>
        <item name="colorSecondaryVariant">@color/chess_gold_dark</item>
        <item name="colorOnSecondary">@color/chess_brown_dark</item>

        <!-- Error color -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/chess_cream</item><!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Splash Activity Theme -->
    <style name="Theme.OnlineChessAI.Splash" parent="Theme.OnlineChessAI">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>    <!-- Button Styles -->
    <style name="Widget.Chess.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/chess_brown_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Widget.Chess.Button.Primary" parent="Widget.Chess.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/chess_brown_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="Widget.Chess.Button.Secondary"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/chess_brown_primary</item>
        <item name="strokeColor">@color/chess_brown_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">2dp</item>
    </style>
    <style name="Widget.Chess.Button.Game" parent="Widget.Chess.Button">
        <item name="android:layout_height">64dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="Widget.Chess.Button.Outline"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/chess_brown_medium</item>
        <item name="strokeColor">@color/chess_brown_medium</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/chess_brown_light</item>
    </style>    <!-- Card Styles -->
    <style name="Widget.Chess.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">@color/outline</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.Chess.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">serif</item>
    </style>

    <style name="TextAppearance.Chess.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Chess.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_secondary</item>
    </style>    <!-- Input Field
    Styles - 修复文字偏上问题 -->
    <style name="Widget.Chess.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>    <!-- Circle Image Style -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Dialog Styles -->
    <style name="Widget.Chess.Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>